model Student {
  id                 String     @id @default(cuid())
  fullName           String
  photoUrl           String
  age                Int
  standard           String
  schoolOrCollege    String
  location           String
  category           String     // e.g., TRIBAL, UNDERPRIVILEGED
  story              String     @db.Text
  achievements       String     @db.Text
  requiredAmount     Int
  collectedAmount    Int        @default(0)
  progressPercentage Int?       @default(0)
  donorCount         Int        @default(0)
  isActive           Boolean    @default(true)
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  
  donations          Donation[]
}

model Donation {
  id             String   @id @default(cuid())
  name           String
  email          String
  phone          String
  amount         Int
  require80G     Boolean  @default(false)
  panNumber      String?
  paymentId      String?  @unique // Razorpay payment ID mapped after success
  orderId        String?  @unique // Razorpay order ID
  status         String   @default("PENDING") // PENDING, COMPLETED, FAILED
  studentId      String?
  student        Student? @relation(fields: [studentId], references: [id], onDelete: SetNull)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([studentId])
  @@index([orderId])
  @@index([paymentId])
}
